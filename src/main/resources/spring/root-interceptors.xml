<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <http use-expressions="true" entry-point-ref="restAuthenticationEntryPoint"
          disable-url-rewriting="false">
        <intercept-url pattern="/app/https/*" access="isAuthenticated()" requires-channel="https"/>
        <intercept-url pattern="/app/secure/*" access="isAuthenticated()"/>
        <logout delete-cookies="JSESSIONID,SPRING_SECURITY_REMEMBER_ME_COOKIE" logout-url="/app/logout"
                success-handler-ref="logoutSuccessHandler"/>
        <form-login login-processing-url="/app/login"
                    password-parameter="password" username-parameter="userName"
                    authentication-success-handler-ref="authSuccessHandler"
                    authentication-failure-handler-ref="authFailureHandler"/>
        <!-- https://www.grc.com/passwords.htm -->
        <remember-me user-service-ref="jdbcDaoImpl" token-validity-seconds="1296000"
                     key="kOQoW357t8HwbeRh7oxSXoXSGmVERKMcGENOxm2qrLZFOF8bxJB4GaIqSoTu9yy"/>
    </http>

</beans:beans>