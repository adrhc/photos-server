<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!--
        Parametrii de tip String pot fi injectati in java cu @Value("${property}".
        Parametrii de tip String pot fi injectati in xhtml folosind varianta ...StringFactoryBean.

        ATENTIE: daca nu se pune declaratia si in dispatcher-servlet.xml atunci nu se mai injecteaza @Value !!!
    -->
    <context:property-placeholder order="1" ignore-resource-not-found="true" ignore-unresolvable="true"
                                  location="classpath*:exifweb-overwrite.properties"/>
    <context:property-placeholder order="9"
                                  location="classpath:exifweb.properties"/>

    <!--<context:load-time-weaver aspectj-weaving="off" />-->
    <context:annotation-config/>
    <!--
         De corelat cu spring-main.xml !
     -->
    <context:component-scan base-package="image.exifweb" use-default-filters="false">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
        <context:include-filter type="annotation"
                                expression="org.springframework.web.bind.annotation.ControllerAdvice"/>
    </context:component-scan>

</beans>