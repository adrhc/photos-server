<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<!--trace (the least serious)-->
<!--debug-->
<!--info-->
<!--warn-->
<!--error-->
<!--fatal (the most serious)-->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="debug"/>
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <!--<param name="ConversionPattern" value="%d{dd MMM HH:mm:ss} [%-5p] [%C{2}.%M] %m%n"/>-->
            <param name="ConversionPattern" value="[%-5p] [%C{2}.%M] %m%n"/>
            <!--<param name="ConversionPattern" value="[%-5p] [%t] %m%n"/>-->
        </layout>
    </appender>

    <!--<appender name="exifweb-file" class="org.apache.log4j.RollingFileAppender">-->
    <!--<param name="Threshold" value="debug"/>-->
    <!--<param name="file" value="exifweb-test.log"/>-->
    <!--<param name="MaxFileSize" value="10MB"/>-->
    <!--&lt;!&ndash; Keep one backup file &ndash;&gt;-->
    <!--<param name="MaxBackupIndex" value="1"/>-->
    <!--<layout class="org.apache.log4j.PatternLayout">-->
    <!--<param name="ConversionPattern" value="%d{dd MMM HH:mm:ss} [%-5p %t] [%C{2}.%M] %m%n"/>-->
    <!--</layout>-->
    <!--</appender>-->

    <logger name="image" additivity="false">
        <level value="info"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="image.photos.infrastructure.messaging.album.AlbumTopic" additivity="false">
        <level value="info"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="subtitles" additivity="false">
        <level value="info"/>
        <appender-ref ref="console"/>
        <!--<appender-ref ref="subtitles-extractor-file"/>-->
    </logger>

    <!-- 3rdparty Loggers -->
    <logger name="org.springframework">
        <level value="warn"/>
    </logger>
    <logger name="org.springframework.cache">
        <level value="warn"/>
    </logger>
    <logger name="org.springframework.test.context.cache">
        <level value="warn"/>
    </logger>

    <!-- Hibernate -->
    <logger name="org.hibernate">
        <level value="warn"/>
    </logger>
    <!--log just the SQL -->
    <logger name="org.hibernate.SQL">
        <level value="warn"/>
    </logger>
    <!--log JDBC bind parameters -->
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder">
        <level value="warn"/>
    </logger>

    <logger name="org.hibernate.cache">
        <level value="warn"/>
    </logger>
    <logger name="org.hibernate.cache.ehcache">
        <level value="warn"/>
    </logger>

    <logger name="net.sf.ehcache">
        <level value="info"/>
    </logger>

    <!-- Root Logger -->
    <root>
        <priority value="warn"/>
        <appender-ref ref="console"/>
        <!--<appender-ref ref="exifweb-file"/>-->
    </root>

</log4j:configuration>
